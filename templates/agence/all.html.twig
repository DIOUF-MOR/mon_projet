

{% extends 'base.html.twig' %}

{% block title %}Tableau des utilisateurs{% endblock %}

{% block body %}
    <div class="container mt-4 border border-2 rounded bg-light">
        <h1 class="mb-4 ">Gestion des agences</h1>
        <div class=" bg-get_digit">
            <div class="">
                <h2 class=" ">Liste des agences</h2>
                <a href="{{ path('app_agence_add') }}" class="btn btn-primary mb-4">
                <i class="bi bi-plus"></i> Ajouter une agence</a>
            </div>
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>N°</th>
                        <th>Adresse</th>
                        <th>Téléphone</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                    {% for agence in agences %}
                        <tr>
                            <td>{{ agence.numero }}</td>
                            <td>{{ agence.adresse }}</td>
                            <td>{{ agence.telephone }}</td>
                            <td>
                                <a href="{{ path('app_agence_add', {id: agence.id}) }}" class="btn btn-primary btn-sm">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="{{ path('app_agence_add', {id: agence.id}) }}" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a href="{{ path('app_agence_add', {id: agence.id}) }}" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i>
                                </a>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="text-center">Aucun utilisateur trouvé</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <nav aria-label="Pagination">
            <ul class="pagination">
                {% if hasPreviousPage %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('app_agence_all', { page: currentPage - 1 }) }}">Précédent</a>
                    </li>
                {% else %}
                    <li class="page-item disabled"><span class="page-link">Précédent</span></li>
                {% endif %}
    
                {% for page in 1..totalPages %}
                    <li class="page-item {{ page == currentPage ? 'active' : '' }}">
                        <a class="page-link" href="{{ path('app_agence_all', { page: page }) }}">{{ page }}</a>
                    </li>
                {% endfor %}
    
                {% if hasNextPage %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('app_agence_all', { page: currentPage + 1 }) }}">Suivant</a>
                    </li>
                {% else %}
                    <li class="page-item disabled"><span class="page-link">Suivant</span></li>
                {% endif %}
            </ul>
        </nav>
    </div>
{% endblock %}
